{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2015",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "lib": [
      "ES2015",
      "ESNext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ]
}